<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:che='urn:import:org.eclipse.che.ide.ui.listbox'>
    <ui:with field='res' type='org.eclipse.che.plugin.maven.client.MavenResources'/>
    <ui:style src="org/eclipse/che/ide/api/ui/style.css" type="org.eclipse.che.plugin.maven.client.wizard.MavenPageViewImpl.Style">

        .spaceRight {
            margin-right: 8px;
            margin-top: 1px;
        }

        .mainDoc {
            margin: 15px;
        }

        .mainDoc div {
            overflow: visible !important;
        }

        .inputError {
            border-color: #ffe400;
            box-shadow: 0 0 5px #ffe400;
        }

        .checkBoxPosition {
            position: relative;
            top: 5px;
        }

        .tooltipButton,
        .tooltipButton:hover,
        .tooltipButton:focus {
            margin-left: 7px;
            border-radius: 10px;
            box-shadow: none;
            padding: 0px;
        }

        .tooltipButton::before {
            content: "?";
            margin-left: 1px;
            font-weight: bold;
        }

        .tooltip > span {
            position: absolute;
            color: mainFontColor;
            border: 1px solid tabBorderColor;
            background: textFieldBackgroundColor;
            white-space: nowrap;
            font-family: mainFontFamily;
            font-size: smallFontSize;
            font-weight: normal;
            text-align: left;
            padding: 3px 15px;
            line-height: normal;
            left: 550px;
            top: 0;
            height: 15px;
            display: none;
        }

        .tooltip:hover > span {
            display: inline;
        }

        .tooltip > span:hover {
            pointer-events: none;
        }

    </ui:style>

    <g:DockLayoutPanel unit="PX" debugId="mavenPageView-mainPanel" addStyleNames="{style.mainDoc}">
        <g:north size="50">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                <g:west size="138">
                    <g:FlowPanel>
                        <g:Label text="Artifact ID:" addStyleNames="{res.css.label}"/>
                    </g:FlowPanel>
                </g:west>
                <g:center>
                    <g:FlowPanel addStyleNames="{style.spaceRight}">
                        <g:TextBox width="500px" ui:field="artifactId" debugId="mavenPageView-artifactId" addStyleNames="{res.css.field}"/>
                        <g:Button pixelSize="20, 20" ui:field="artifactIdTooltipButton"
                                  debugId="mavenPageView-artifactIdTooltipButton"
                                  addStyleNames="{style.tooltipButton}"/>
                    </g:FlowPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="50">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                <g:west size="138">
                    <g:FlowPanel>
                        <g:Label text="Group ID:" addStyleNames="{res.css.label}"/>
                    </g:FlowPanel>
                </g:west>
                <g:center>
                    <g:FlowPanel addStyleNames="{style.spaceRight}">
                        <g:TextBox width="500px" ui:field="groupId" debugId="mavenPageView-groupId" addStyleNames="{res.css.field}"/>
                        <g:Button pixelSize="20, 20" ui:field="groupIdTooltipButton" debugId="mavenPageView-groupIdTooltipButton"
                                  addStyleNames="{style.tooltipButton}"/>
                    </g:FlowPanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="50">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                <g:west size="138">
                    <g:FlowPanel>
                        <g:Label text="Version:" addStyleNames="{res.css.label}"/>
                    </g:FlowPanel>
                </g:west>
                <g:center>
                    <g:SimplePanel addStyleNames="{style.spaceRight}">
                        <g:TextBox width="500px" ui:field="versionField" debugId="mavenPageView-version" addStyleNames="{res.css.field}">
                            1.0-SNAPSHOT
                        </g:TextBox>
                    </g:SimplePanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
        <g:north size="50">
            <g:DockLayoutPanel unit="PX" width="100%" height="100%">
                <g:west size="138">
                    <g:FlowPanel>
                        <g:Label ui:field="generatorsLabel" text="Generator:" addStyleNames="{res.css.label}"/>
                    </g:FlowPanel>
                </g:west>
                <g:center>
                    <g:SimplePanel addStyleNames="{style.spaceRight}">
                        <che:CustomListBox ui:field="generatorsList" selectedIndex="0"
                          debugId="mavenPageView-generatorField" width="511px" height="29px"
                          addStyleNames="{res.css.field}"/>
                    </g:SimplePanel>
                </g:center>
            </g:DockLayoutPanel>
        </g:north>
    </g:DockLayoutPanel>
</ui:UiBinder>
